datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Invoice {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  imageUrl  String
  ocrData   String
  createdAt DateTime @default(now())
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  invoices Invoice[]
}
